@{
    ViewData["Title"] = "Home Page";
}


<!-- ==========Banner-Section========== -->
<section class="banner-section">
    <div class="banner-bg bg_img bg-fixed" data-background="~/user/assets/images/banner/banner01.jpg"></div>
    <div class="container">
        <div class="banner-content">
            <h1 class="title cd-headline clip">
                <span class="d-block">book your</span> tickets for
                <span class="color-theme cd-words-wrapper p-0 m-0">
                    <b class="is-visible">Event</b>
                    <b>Conference</b>
                    <b>Workshop</b>
                </span>
            </h1>
            <p>Safe, secure, reliable ticketing. Your ticket to live entertainment!</p>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->
<!-- ==========Ticket-Search========== -->
<section class="search-ticket-section padding-top pt-lg-0">
    <div class="container">
        <div class="search-tab bg_img" data-background="~/user/assets/images/ticket/ticket-bg01.jpg">
            <div class="row align-items-center mb--20">
                <div class="col-lg-6 mb-20">
                    <div class="search-ticket-header">
                        <h6 class="category">welcome to BookIt</h6>
                        <h3 class="title">what are you looking for</h3>
                    </div>
                </div>
                <div class="col-lg-6 mb-20">
                    <ul class="tab-menu ticket-tab-menu">
                        <li class="active">
                            <div class="tab-thumb">
                                <img src="~/user/assets/images/ticket/ticket-tab01.png" alt="ticket">
                            </div>
                            <span>events</span>
                        </li>
                        <li>
                            <div class="tab-thumb">
                                <img src="~/user/assets/images/ticket/ticket-tab02.png" alt="ticket">
                            </div>
                            <span>conferences</span>
                        </li>
                        <li>
                            <div class="tab-thumb">
                                <img src="~/user/assets/images/ticket/ticket-tab03.png" alt="ticket">
                            </div>
                            <span>workshops</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="tab-area">
                <div class="tab-item active">
                    <form class="ticket-search-form" asp-controller="Event" asp-action="Search" method="get">
                        <div class="form-group large">
                            <input type="text" name="searchTerm" placeholder="Search for Events">
                            <button type="submit"><i class="fas fa-search"></i></button>
                        </div>
                        <div class="form-group">
                            <div class="thumb">
                                <img src="~/user/assets/images/ticket/city.png" alt="ticket">
                            </div>
                            <span class="type">location</span>
                            <select class="select-bar" name="locationId">
                                <option value="">All Locations</option>
                                @foreach (var location in ViewBag.Locations ?? new List<object>())
                                {
                                    <option value="@location.Id">@location.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="thumb">
                                <img src="~/user/assets/images/ticket/date.png" alt="ticket">
                            </div>
                            <span class="type">date</span>
                            <input type="date" name="date" class="select-bar">
                        </div>
                        <div class="form-group">
                            <div class="thumb">
                                <img src="~/user/assets/images/ticket/cinema.png" alt="ticket">
                            </div>
                            <span class="type">category</span>
                            <select class="select-bar" name="categoryId">
                                <option value="">All Categories</option>
                                @foreach (var category in ViewBag.Categories ?? new List<object>())
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Ticket-Search========== -->
<!-- ==========Event-Section========== -->
<section class="event-section padding-top padding-bottom bg-four">
    <div class="container">
        <div class="tab">
            <div class="section-header-2">
                <div class="left">
                    <h2 class="title">Upcoming Events</h2>
                    <p>Don't miss these exciting events!</p>
                </div>
                <ul class="tab-menu">
                    <li class="active">
                        now showing
                    </li>
                    <li>
                        coming soon
                    </li>
                    <li>
                        exclusive
                    </li>
                </ul>
            </div>
            <div class="tab-area mb-30-none">
                <div class="tab-item active">
                    <div class="owl-carousel owl-theme tab-slider">
                        @foreach (var evt in ViewBag.UpcomingEvents ?? new List<object>())
                        {
                            <div class="item">
                                <div class="event-grid">
                                    <div class="movie-thumb c-thumb">
                                        <a asp-controller="Event" asp-action="Details" asp-route-id="@evt.Id">
                                            <img src="@evt.ImagePath" alt="@evt.Title">
                                        </a>
                                        <div class="event-date">
                                            <h6 class="date-title">@evt.EventDate.Day</h6>
                                            <span>@evt.EventDate.ToString("MMM")</span>
                                        </div>
                                    </div>
                                    <div class="movie-content bg-one">
                                        <h5 class="title m-0">
                                            <a asp-controller="Event" asp-action="Details" asp-route-id="@evt.Id">@evt.Title</a>
                                        </h5>
                                        <div class="movie-rating-percent">
                                            <span>@evt.LocationName</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Event-Section========== -->