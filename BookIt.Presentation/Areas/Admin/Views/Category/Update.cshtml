@model BookIt.Application.DTOs.CategoryDTO.UpdateCategoryDTO

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<br>
<br>
<br>
<br>
<div class="container">
    <h2 class="mb-4">Update Category</h2>

    <form asp-action="Update" method="post">
        <!-- Hidden field to hold the category ID -->
        <input type="hidden" asp-for="Id" />

        <div class="card mb-3">
            <div class="card-body">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Category Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <h4 class="mb-3">Category Details</h4>
        @for (int i = 0; i < Model.CategoryDetails.Count; i++)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <!-- Hidden field for the detail ID -->
                    <input type="hidden" asp-for="CategoryDetails[i].Id" />

                    <div class="form-group mb-3">
                        <label asp-for="CategoryDetails[i].LanguageId" class="form-label">Language</label>
                        <select asp-for="CategoryDetails[i].LanguageId" class="form-select" asp-items="ViewBag.Languages">
                            <option value="">Select Language</option>
                        </select>
                        <span asp-validation-for="CategoryDetails[i].LanguageId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CategoryDetails[i].Name" class="form-label">Detail Name</label>
                        <input asp-for="CategoryDetails[i].Name" class="form-control" placeholder="Enter category detail name" />
                        <span asp-validation-for="CategoryDetails[i].Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <button type="submit" class="btn btn-success">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}