@using BookIt.Application.DTOs.EventDetailDTO
@model CreateEventDetailDTO

@{
    ViewData["Title"] = "Create Event Detail";
    var eventId = ViewBag.EventId;
    var languageId = ViewBag.LanguageId;
    var eventTitle = ViewBag.EventTitle;
    var languages = ViewBag.Languages as List<SelectListItem>;
}
<br>
<br>
<br>
<br>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2>Create Event Detail for "@eventTitle"</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EventId" value="@eventId" />
    
    <div class="form-group">
        <label asp-for="LanguageId">Language</label>
        <select asp-for="LanguageId" class="form-control" asp-items="languages">
            <option value="">Select a language</option>
        </select>
        <span asp-validation-for="LanguageId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalSeats"></label>
        <input asp-for="TotalSeats" class="form-control" />
        <span asp-validation-for="TotalSeats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableSeats"></label>
        <input asp-for="AvailableSeats" class="form-control" />
        <span asp-validation-for="AvailableSeats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsSoldOut" class="form-check-input" />
        <label asp-for="IsSoldOut" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" asp-route-eventId="@eventId" asp-route-languageId="@languageId" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

