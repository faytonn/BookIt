@using BookIt.Application.DTOs.EventSeatTypeDTO
@model List<GetEventDetailSeatTypeDTO>

@{
    ViewData["Title"] = "Event Seat Types";
    int count = 1;
    var eventDetailId = ViewBag.EventDetailId;
}
<br>
<br>
<br>
<br>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2>Event Seat Types for Event Detail @eventDetailId</h2>

<a asp-action="Create" asp-route-eventDetailId="@eventDetailId" class="btn btn-success">Create New Event Seat Type</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Seat Type</th>
            <th>Price</th>
            <th>Additional Details</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@item.SeatTypeName</td>
                <td>@item.Price</td>
                <td>@item.AdditionalDetails</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event seat type?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
