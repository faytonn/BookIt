@model IEnumerable<BookIt.Application.DTOs.SeatDTO.GetSeatDTO>
@{
    ViewBag.Title = "Configure Seats";
    int hallId = (int)ViewBag.HallId;
}
<br>
<br>
<br>
<br>
<h2>Create Seat</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2>Seats for Hall @hallId</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Seat Name</th>
            <th>Row</th>
            <th>Column</th>
            <th>Seat Type</th>
            <th>Reserved?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seat in Model)
        {
            <tr>
                <td>@seat.SeatName</td>
                <td>@seat.SeatRow</td>
                <td>@seat.SeatColumn</td>
                <td>@seat.SeatTypeId</td>
                <td>@(seat.IsReserved ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@seat.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@seat.Id" />
                        <input type="hidden" name="hallId" value="@seat.HallId" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this seat?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-route-hallId="@hallId" class="btn btn-success">Add Single Seat</a>
<a asp-action="BulkCreate" asp-route-hallId="@hallId" class="btn btn-info">Bulk Create Seats</a>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}