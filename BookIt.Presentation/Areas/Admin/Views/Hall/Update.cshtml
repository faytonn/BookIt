@using BookIt.Application.DTOs.HallDTO
@model UpdateHallDTO

@{
    ViewData["Title"] = "Update Hall";
}
<br>
<br>
<br>
<br>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2>Update Hall</h2>

<form asp-action="Update" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <!-- General Location Dropdown -->
    <div class="form-group">
        <label asp-for="LocationId">General Location</label>
        <select asp-for="LocationId" class="form-control" asp-items="ViewBag.Locations">
            <option value="">Select a location</option>
        </select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>

    <!-- Multi-Language Hall Name Inputs -->
    <div class="row">
        <!-- English -->
        <div class="col-md-4">
            <label class="form-label">English Name</label>
            <input type="hidden" name="HallDetails[0].LanguageId" value="1" />
            <input type="text" name="HallDetails[0].Name" class="form-control"
                   placeholder="Enter hall name in English"
                   value="@(Model.HallDetails.FirstOrDefault(d => d.LanguageId == 1)?.Name)" />
        </div>
        <!-- Azerbaijani -->
        <div class="col-md-4">
            <label class="form-label">Azerbaijani Name</label>
            <input type="hidden" name="HallDetails[1].LanguageId" value="2" />
            <input type="text" name="HallDetails[1].Name" class="form-control"
                   placeholder="Enter hall name in Azerbaijani"
                   value="@(Model.HallDetails.FirstOrDefault(d => d.LanguageId == 2)?.Name)" />
        </div>
        <!-- Czech -->
        <div class="col-md-4">
            <label class="form-label">Czech Name</label>
            <input type="hidden" name="HallDetails[2].LanguageId" value="3" />
            <input type="text" name="HallDetails[2].Name" class="form-control"
                   placeholder="Enter hall name in Czech"
                   value="@(Model.HallDetails.FirstOrDefault(d => d.LanguageId == 3)?.Name)" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
