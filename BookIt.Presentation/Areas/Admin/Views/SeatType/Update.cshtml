@using BookIt.Application.DTOs.SeatTypeDTO
@model UpdateSeatTypeDTO

@{
    ViewData["Title"] = "Update Seat Type";
}

<br>
<br>
<br>
<br>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h2>Update Seat Type</h2>

<form asp-action="Update" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DefaultPrice"></label>
        <input asp-for="DefaultPrice" class="form-control" />
        <span asp-validation-for="DefaultPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HallId"></label>
        <select asp-for="HallId" class="form-control" asp-items="ViewBag.Halls">
            <option value="">Select a hall</option>
        </select>
        <span asp-validation-for="HallId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
