@using BookIt.Application.DTOs.SeatTypeDTO
@model CreateSeatTypeDTO

@{
    ViewData["Title"] = "Create Seat Type";
}
<br>
<br>
<br>
<br>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


<h2>Create Seat Type</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DefaultPrice"></label>
        <input asp-for="DefaultPrice" class="form-control" />
        <span asp-validation-for="DefaultPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HallId"></label>
        <select asp-for="HallId" class="form-control" asp-items="ViewBag.Halls">
            <option value="">Select a hall</option>
        </select>
        <span asp-validation-for="HallId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
